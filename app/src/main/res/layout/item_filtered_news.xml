<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/main_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/news_topic"
        style="@style/NewsTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:padding="@dimen/spacing_small"
        android:text="TRENDING"
        app:layout_constraintBottom_toBottomOf="@id/news_image"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/news_header"
        style="@style/NewsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Latest opportunities in Coffee Business"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_image"/>

    <TextView
        android:id="@+id/news_author"
        style="@style/SmallGreySubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Angel Westervelt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>